<h1><%= @work.datetimeperformed %></h1>
<p><%= link_to 'Edit', edit_work_path %></p>

<p>Done by: <%= "#{@work.user.fname} #{@work.user.lname}" %></p>
<p>Project: <%= @work.project.name %></p>
<p>Hours: <%= @work.hours %></p>

<% if @work.doc %>
    <p>Document: <%= link_to @work.doc, "/uploads/#{@work.doc}", :target => "_blank" %></p>
<% end %>

<% content_for :aside do %>
    <%= render 'sidebar' %>
<% end %>

